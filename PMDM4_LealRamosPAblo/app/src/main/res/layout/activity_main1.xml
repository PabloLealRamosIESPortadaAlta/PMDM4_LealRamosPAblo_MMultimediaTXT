<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_gradiente">

    <!-- ViewFlipper para las imágenes -->
    <ViewFlipper
        android:id="@+id/visorImagenes"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:src="@drawable/imagen1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <ImageView
            android:src="@drawable/imagen2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <ImageView
            android:src="@drawable/imagen3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <ImageView
            android:src="@drawable/imagen4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </ViewFlipper>


    <Button
        android:id="@+id/botonPaisajes"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="PAISAJES"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/boton_gradiente"
        android:layout_below="@id/visorImagenes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Texto animado -->
    <TextView
        android:id="@+id/textoAnimado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valoración de paisajes"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_below="@id/botonPaisajes"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"/>

    <!-- Campo de valoración -->
    <EditText
        android:id="@+id/valoracionTexto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Valora (1-10)"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/borde_edittext"
        android:layout_below="@id/textoAnimado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
